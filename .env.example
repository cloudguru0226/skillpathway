# Environment Configuration Template
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/lms_production
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=your_password
PGDATABASE=lms_production

# Application Configuration
NODE_ENV=production
PORT=5000
SESSION_SECRET=your_very_secure_session_secret_here_minimum_32_characters

# Redis Configuration (Optional, for session storage and caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# CORS Configuration
CORS_ORIGIN=https://your-domain.com,https://www.your-domain.com

# SSL Configuration (for HTTPS)
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# AWS Configuration (for deployment)
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012
ECR_REPOSITORY_NAME=lms-production
ECS_CLUSTER_NAME=lms-cluster
ECS_SERVICE_NAME=lms-service

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_FILE_UPLOADS=true
MAX_UPLOAD_SIZE=10MB